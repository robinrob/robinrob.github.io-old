.home
  .container
    {% for post in site.posts %}
    / Main Content
    .row
      .col-lg-8.col-md-10
        .post-preview
          %a{:href => "{{ post.url | prepend: site.baseurl }}"}
            %h2.post-title
              {{ post.title }}
          %p.post-meta Posted by {{ post.author }} on {{ post.date | date: "%b %-d, %Y" }}
        %hr/
    {% endfor %}