\---
layout: default
\---

/ Post header
%body
  %header.intro-header{:style => "background-image: url('{{ post.image }}')"}
    .container.post-heading
      .row
        .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
          .site-heading
            %h1 {{ page.title }}
            %hr.small/
            %span.subheading {{ page.subtitle }}

  / Content
  .main
    %article
      .container
        .row
          .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
            {{ content }}
            %hr/
            %ul.pager
              {% if page.previous.url %}
              %li.previous
                %a{"data-placement" => "top", "data-toggle" => "tooltip", :href => "{{ page.previous.url | prepend: site.baseurl | replace: '//', '/' }}", :title => "{{page.previous.title}}"} ← Previous Post
              {% endif %}
              {% if page.next.url %}
              %li.next
                %a{"data-placement" => "top", "data-toggle" => "tooltip", :href => "{{ page.next.url | prepend: site.baseurl | replace: '//', '/' }}", :title => "{{page.next.title}}"} Next Post →
              {% endif %}
  %hr/